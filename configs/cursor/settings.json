{
  "[html]": { "editor.tabSize": 2 },
  "[markdown]": { "editor.defaultFormatter": "DavidAnson.vscode-markdownlint" },
  "[slim]": { "editor.tabSize": 2 },
  "cursor.cmdk.autoSelect": false,
  "cursor.cpp.disabledLanguages": [ "plaintext", "markdown", "scminput" ],
  "diffEditor.ignoreTrimWhitespace": false,
  "dotfiles.installCommand": "install.sh",
  "dotfiles.repository": "https://github.com/fgrehm/dotfiles-devcontainer.git",
  "dotfiles.targetPath": "~/dotfiles",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "off",
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.suggestSmartCommit": true,
  "github.copilot.enable": { "*": true, "plaintext": false, "markdown": false, "scminput": false },
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.pushBranch": "always",
  "githubPullRequests.terminalLinksHandler": "github",
  "remote.autoForwardPortsSource": "hybrid",
  "settingsSync.ignoredExtensions": [ "wingrunr21.vscode-ruby", "eamodio.gitlens", "shan.code-settings-sync" ],
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.accessibleViewPreserveCursorPosition": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.scrollback": 50000,
  "terminal.integrated.showExitAlert": false
}
