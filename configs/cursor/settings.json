{
    "telemetry.telemetryLevel": "off",
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.trimAutoWhitespace": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.suggestSmartCommit": true,
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "githubPullRequests.pullBranch": "never",
    "terminal.integrated.accessibleViewPreserveCursorPosition": true,
    "explorer.autoReveal": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "githubPullRequests.terminalLinksHandler": "github",
    "settingsSync.ignoredExtensions": [
        "wingrunr21.vscode-ruby",
        "eamodio.gitlens",
        "shan.code-settings-sync"
    ],
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 50000,
    "githubPullRequests.pushBranch": "always",
    "editor.minimap.enabled": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "explorer.confirmDelete": false,
    "editor.wordWrap": "off",
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "markdown",
        "scminput"
    ],
    "editor.multiCursorModifier": "ctrlCmd",
    "cursor.cmdk.autoSelect": false,
    "dotfiles.repository": "https://github.com/fgrehm/dotfiles-devcontainer.git",
    "dotfiles.targetPath": "~/dotfiles",
    "dotfiles.installCommand": "install.sh",
    "[html]": { "editor.tabSize": 2 },
    "[slim]": { "editor.tabSize": 2 },
    "terminal.integrated.showExitAlert": false,
    "remote.autoForwardPortsSource": "hybrid"
}
