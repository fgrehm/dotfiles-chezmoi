[
  { "key": "ctrl+b", "command": "-workbench.action.toggleSidebarVisibility" },
  { "key": "ctrl+e", "command": "-workbench.action.quickOpen" },
  { "key": "ctrl+j", "command": "-workbench.action.togglePanel" },
  { "key": "ctrl+k f", "command": "workbench.action.quickOpen" },
  { "key": "ctrl+k g", "command": "editor.action.revealDefinition", "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor" },
  {
    "key": "ctrl+k shift+right",
    "command": "workbench.action.moveEditorToRightGroup"
  },
  { "key": "ctrl+k w", "command": "workbench.action.closeEditorsInGroup" },
  { "key": "ctrl+l", "command": "-aichat.newchataction" },
  // https://forum.cursor.com/t/change-ctrl-l-to-ctrl-i-control-l-is-for-clear-terminal/15310/7
  { "key": "ctrl+l", "command": "aichat.newchataction", "when": "!terminalFocus" },
  { "key": "ctrl+l", "command": "workbench.action.terminal.selectCurrentLine", "when": "terminalFocus" },
  { "key": "ctrl+m ctrl+m", "command": "-workbench.action.toggleMaximizeEditorGroup", "when": "editorPartMaximizedEditorGroup || editorPartMultipleEditorGroups" },
  { "key": "ctrl+m w", "command": "-workbench.action.closeEditorsInGroup" },
  { "key": "ctrl+p", "command": "-workbench.action.quickOpen" },
  { "key": "ctrl+shift+alt+up", "command": "-editor.action.copyLinesUpAction", "when": "editorTextFocus && !editorReadonly" },
  { "key": "ctrl+shift+b", "command": "workbench.action.toggleSidebarVisibility" },
  {
    "key": "f12",
    "command": "-editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  {
    "key": "ctrl+i",
    "command": "composerMode.agent"
  },
  {
    "key": "ctrl+shift+b",
    "command": "-workbench.view.backgroundAgent",
    "when": "viewContainer.workbench.view.backgroundAgent.enabled"
  },
  {
    "key": "ctrl+shift+b",
    "command": "-workbench.action.tasks.build",
    "when": "taskCommandsRegistered"
  },
  {
    "key": "ctrl+k m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "panelAlignment == 'center' || panelPosition != 'bottom' && panelPosition != 'top'"
  }
]
